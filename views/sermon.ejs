<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>
  <style>
    header {
      padding-top: -30px;
      margin-bottom: 20px;
      background-color: #0c4680;
    }
    #footer {
      margin-top: 400px;
    }
    .nav h1:nth-child(1) {
      border: none;
    }
    #aside-nav h1:nth-child(2) {
      border-bottom: solid #0c4680;
    }
    .nav h1:nth-child(2) {
      border-bottom: solid crimson;
    }
    header {
      padding-bottom: 15px;
    }
    #content h2 {
      color: black;
      border-left: solid crimson;
      padding-left: 20px;
      font-family: "Yrsa", sans-serif;
    }
    form {
      margin-top: 10px;
      position: absolute;
      margin-left: 100px;
      float: left;
    }
    form input:nth-child(1) {
      width: 400px;
    }
    #sermons {
      margin-top: 100px;
    }
    .read {
      color: crimson;
      font-family: "Yrsa", sans-serif;
      font-size: 20px;
      font-weight: 600;
    }
    #content h1 {
      font-size: 38px;
      color: crimson;
      margin-left: 100px;
      font-family: "Yrsa", sans-serif;
    }
    #content h2 {
      margin-left: 100px;
    }
    #content p {
      font-size: 24px;
      color: black;
      font-family: "Yrsa", sans-serif;
      margin-top: 25px;
      margin-left: 100px;
      margin-bottom: 10px;
    }
    #auth {
      color: black;
      opacity: 80%;
      font-size: 20px;
      margin-top: -100px;
      margin-left: 100px;
      position: absolute;
    }
  </style>
  <title>Sermon</title>
  <body>
    <div id="header"><%-include("./partials/header.ejs") %></div>
    <div id="content">
      <% data.forEach(sermon => { %>
      <h1><%= sermon.title%></h1>
      <span id="auth"><%= sermon.author%></span>
      <h2><%= sermon.snippet %></h2>
      <p><%= sermon.content%></p>
      <% })%>
    </div>
    <div id="footer"><%-include("./partials/footer.ejs")%></div>
  </body>
</html>
